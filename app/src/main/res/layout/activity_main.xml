<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FAE2E2">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/time_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Time : 0"
            android:textSize="40sp"
            android:textStyle="italic|bold|normal" />

        <GridLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivApple1"
                android:layout_width="78dp"
                android:layout_height="80dp"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple2"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_row="4"
                android:layout_column="2"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="1"
                android:layout_column="4"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple5"
                android:layout_width="70dp"
                android:layout_height="78dp"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple6"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_row="7"
                android:layout_column="4"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple7"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="2"
                android:layout_column="3"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple10"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_row="4"
                android:layout_column="4"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="5"
                android:layout_column="1"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple12"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="6"
                android:layout_column="3"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

            <ImageView
                android:id="@+id/ivApple13"
                android:layout_width="78dp"
                android:layout_height="70dp"
                android:layout_row="7"
                android:layout_column="0"
                android:onClick="clickedApple"
                android:src="@drawable/redapple" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/result_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Result : 0"
                android:textSize="40sp"
                android:textStyle="italic|bold|normal" />

            <TextView
                android:id="@+id/score_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Score : 0"
                android:textSize="40sp"
                android:textStyle="italic|bold|normal" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>